    <style>
    /* Reset básico */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Roboto', sans-serif;
    background-color: #f4f7fa;
    color: #333;
    line-height: 1.6;
}

/* Estilização do cabeçalho */
header {
    background-color: #4829f9;
    color: #ecf0f1;
    padding: 20px;
    text-align: center;
}

header h1 {
    font-size: 2.5rem;
    letter-spacing: 2px;
    color: #fff;
}

nav button {
    margin-top: 15px;
    padding: 10px 20px;
    border: none;
    border-radius: 25px;
    background-color: #fff;
    color: rgb(15, 35, 150);
    font-size: 1.1rem;
    position: absolute;
    top: 1%;
    left: 90%;
    cursor: pointer;
    transition: all 0.3s ease;
}

nav button:hover {
    background-color: #fff;
    transform: scale(1.05);
}

.home{
    position: absolute;
    color: #fff;
    top: 2%;
    left: 5%;
    font-size: 40px;
}



/* Estilização do conteúdo principal */
main {
    max-width: 900px;
    margin: 20px auto;
    padding: 20px;
    background-color: #ffffff;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    border-radius: 10px;
    text-align: center;
}

h2 {
    font-size: 2rem;
    color: #333;
    margin-bottom: 20px;
}

form {
    display: flex;
    flex-direction: column;
    gap: 15px;
    text-align: left;
}

form input[type="text"],
form textarea {
    padding: 15px;
    border: 2px solid #bdc3c7;
    border-radius: 5px;
    width: 100%;
    font-size: 1rem;
    background-color: #ecf0f1;
    transition: all 0.3s ease;
}

form input[type="text"]:focus,
form textarea:focus {
    border-color: #3498db;
    background-color: #fff;
}

form textarea {
    height: 150px;
    resize: none;
}

h1{
    color: #fff;
}

form input[type="file"] {
    padding: 5px;
    font-size: 1rem;
}

form button {
    padding: 15px 25px;
    background-color: #4829f9;
    border: none;
    border-radius: 50px;
    color: #ffffff;
    font-size: 1.2rem;
    cursor: pointer;
    transition: all 0.3s ease;
}

form button:hover {
    background-color: #4e36da;
}

#content {
    padding: 20px;
}

/* Estilo do ícone do menu */
.menu-icon {
    font-size: 30px;
    position: absolute;
    top: 20px;
    left: 20px;
    background-color: transparent;
    border: none;
    color: #333;
    cursor: pointer;
}

/* Estilos para a sidebar */
/* Sidebar escondida por padrão */
.sidebar {
    height: 100%;
    width: 0;
    position: fixed;
    top: 0;
    left: 0;
    background-color: #fff;
    overflow-x: hidden;
    transition: 0.3s;
    padding-top: 60px;
    z-index: 1000;
    
}

/* Sidebar visível quando adicionada a classe "open" */
.sidebar.open {
    width: 250px;
    display: block;
}


.sidebar h2 {
    color: #160ab9;
    font-weight: 800;
    text-align: center;
}

.sidebar ul {
    list-style-type: none;
    padding: 0;
}

.sidebar ul li {
    text-align: center;
    margin: 10px 0;
}

.sidebar ul li a {
    color: #686767;
    font-weight: 600;
    text-decoration: none;
    font-size: 18px;
    display: block;
    padding: 12px;
    transition: 0.3s;
}

.sidebar ul li a:hover {
    background-color: #4829f9;
    color: #fff;
}

/* Botão para fechar a sidebar */
.close-btn {
    position: absolute;
    top: 20px;
    right: 25px;
    font-size: 36px;
    color: white;
    border: none;
    background-color: transparent;
    cursor: pointer;
}

/* Estilos para o conteúdo principal */
.content {
    transition: margin-left .3s;
    padding: 20px;
}

.close{
    color: red;

}

.post-container {
    display: grid;
    grid-template-columns: 1fr; /* 1 coluna para dispositivos móveis */
    gap: 20px;
    margin: 20px auto;
    max-width: 800px;
    padding: 10px;
}

.post {
    border: 1px solid #ccc;
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease;
}

.post:hover {
    transform: translateY(-5px);
}

.post-image img {
    width: 100%;
    height: auto;
    padding: 20px;
    border-top-left-radius: 20px;
    border-top-right-radius: 20px;
    border: 1px solid #dfdfdf;
}

.post-content {
    padding: 20px;
    position: relative;
}

.like-button {
    background: transparent;
    border: none;
    color: rgb(253, 44, 29);
    font-size: 20px;
    cursor: pointer;
    display: flex;
    align-items: center;
    position: absolute;
    top: 5px;
    left: 30px;
}

.like-button:hover {
    color: #c13584; 
}

.like-count {
    margin-left: 8px;
    font-size: 16px;
    color: #555;
}

.post-content h2 {
    color: #3f2aac;
    font-size: 30px;
    font-family: Verdana, Geneva, Tahoma, sans-serif;
    margin: 5px 0 18px 0;
}

.post-content p {
    font-size: 18px;
    margin: 10px 0 15px 0;
    line-height: 1.6;
    color: #555;
    text-align: left;
    word-spacing: 1px;
}

.excluirBtn {
    width: 20%;
    height: 40px;
    border-radius: 20px;
    color: #fff;
    background-color: #d11313;
    border: 1px solid #ccc;
    cursor: pointer;
    padding: 5px 10px;
}

.exclusaoBox {
    background-color: #f5f5f5;
    border-radius: 20px;
    margin: 40px 0 0 0;
    width: 100%;
    padding: 20px;
}

.displayColumn {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
}

.exclusaoBox h2 {
    text-align: left;
    margin: 0;
    font-size: 20px;
}

.accordion-button {
    font-size: 24px;
    background-color: transparent;
    border: none;
    cursor: pointer;
    color: #333;
    display: flex;
    align-items: center;
    justify-content: center;
}

.displayRow {
    display: flex;
    flex-direction: row;
    width: 100%;
    flex-wrap: wrap;
    gap: 10px;
}

#postList {
    display: none;
    flex-wrap: wrap;
    gap: 10px;
    width: 100%;
    list-style: none;
    padding: 0;
    margin: 50px 0 0 0;
}

#postList li {
    border: 1px solid #ccc;
    padding: 10px;
    margin-bottom: 5px;
    background-color: #f1f1f1;
    flex: 1 1 30%;
    text-align: center;
}

.notification {
    display: none;
    padding: 15px;
    background-color: #2ecc71;
    color: white;
    border-radius: 5px;
    margin-top: 20px;
    font-size: 18px;
    text-align: center;
}

/* Estilização do rodapé */
.footer-bottom {
    background: #4829f9;
    color: #fff;
    font-size: 14px;
    font-weight: 300;
    padding: 40px 20px;
    text-align: center;
    width: 100%;
    margin-top: 20px; /* Espaçamento acima do rodapé */
}

.row-footer {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 20px;
}

.footer-col {
    width: 100%;
    max-width: 300px;
    padding: 0 10px;
    margin-bottom: 20px;
}

.footer-col h4 {
    font-size: 18px;
    color: #fff;
    text-transform: capitalize;
    margin-bottom: 15px;
    font-weight: 500;
    position: relative;
}

.footer-col h4::before {
    content: '';
    position: absolute;
    left: 40%;
    bottom: -5px;
    background-color: #fff;
    height: 2px;
    width: 50px;
}

.footer-col ul {
    list-style: none;
    padding: 0;
    margin: 0;
}

.footer-col ul li {
    margin-bottom: 10px;
}

.footer-col ul li a {
    font-size: 14px;
    text-transform: capitalize;
    color: #bbbbbb;
    text-decoration: none;
    font-weight: 300;
    display: block;
    transition: color 0.3s ease, padding 0.3s ease;
}

.footer-col ul li a:hover {
    color: #fff;
    padding: 8px;
}

/* Links sociais do rodapé */
.footer-col .social-links {
    display: flex;
    justify-content: center;
    gap: 10px;
    margin-top: 15px;
}

.footer-col .social-links a {
    height: 40px;
    width: 40px;
    background-color: rgba(255, 255, 255, 0.2);
    text-align: center;
    line-height: 40px;
    border-radius: 50%;
    color: #fff;
    transition: background-color 0.5s ease, color 0.5s ease;
}

.footer-col .social-links a:hover {
    background-color: #fff;
    color: #4829f9;
}

/* Copy (direitos autorais) */
.copy {
    background-color: #4829f9;
    color: #fff;
    padding: 10px;
    font-size: 14px;
    margin-top: 40px;
    text-align: center;
}

.copy p {
    margin: 0;
}

.marketing {
    color: #fff;
    text-decoration: underline;
}

/* Responsividade */
@media (max-width: 767px) {
    .row-footer {
        flex-direction: column;
        align-items: center;
    }

    .footer-col {
        text-align: center;
    }

    .social-links {
        justify-content: center;
    }
}



/* Responsividade pagina*/
@media (max-width: 768px) {
    header h1 {
        font-size: 2rem;
    }

    main {
        padding: 15px;
    }

    nav button {
        padding: 10px;
        font-size: 1rem;
    }
}

@media (max-width: 500px) {
    main {
        padding: 10px;
    }

    form button {
        padding: 10px;
        font-size: 1rem;
    }

    h2 {
        font-size: 1.7rem;
    }
}

/* Responsivo: Sidebar ocupa toda a largura em telas menores */
@media (max-width: 768px) {
    .sidebar.open {
        width: 100%; /* Sidebar ocupa 100% da largura em telas pequenas */
    }
}

    </style>
</head>
<body>
    <header>
        <div id="sidebar" class="sidebar">
            <button class="menu-icon" onclick="toggleSidebar()">
                <i class="fas fa-times close"></i>
            </button>
            <h2>Menu</h2>
            <ul>
                <li><a href="https://gugutalkshoww.vercel.app/">Início</a></li>
                <li><a href="#">Sobre</a></li>
                <li><a href="#">Loja</a></li>
                <li><a href="#">Contato</a></li>
                <li><a href="https://www.instagram.com/gugu.talk.show/">Nos siga</a></li>
            </ul>
        </div>
        <button onclick="toggleSidebar()"><i class="fas fa-bars home"></i></button>
        <h1>Blog do GUGU</h1>
        <nav>
            <button onclick="location.href='/login'"><i class="fas fa-user-circle"></i></button>
        </nav>
    </header>

    <div vw class="enabled">
        <div vw-access-button class="active"></div>
        <div vw-plugin-wrapper>
            <div class="vw-plugin-top-wrapper"></div>
        </div>
    </div>
    <main>
    
        <div class="post-container">
            <% posts.forEach(post => { %>
                <div class="post">
                    <% if (post.media) { %>
                        <div class="post-image">
                            <img src="<%= post.media %>" alt="<%= post.title %>">
                        </div>
                    <% } %>
                    <div class="post-content">
                        <button class="like-button" onclick="likePost(this, '<%= post._id %>')">
                            <i class="fas fa-heart"></i> <span class="like-count"><%= post.likes || 0 %></span>
                        </button>
                        <h2><%= post.title %></h2>
                        <p><%= post.content %></p>
                    </div>
                </div>
            <% }); %>
        </div>
        
        <div class="pagination">
            <!-- Aqui você pode adicionar botões de paginação se necessário -->
        </div>
    </main>
    <footer class="footer-bottom py-3 text-center">
        <div class="container-footer">
            <div class="row-footer">
                <div class="footer-col">
                    <h4>Company</h4>
                    <ul>
                        <li><a href="#portfolio">Sobre nós</a></li>
                        <li><a href="#services">Nossos serviços</a></li>
                        <li><a href="#contact">Fale conosco</a></li>
                        <li><a href="https://wa.me/5511999832007?text=Trabalhe%20conosco">Trabalhe conosco</a></li>
                    </ul>
                </div>
                <div class="footer-col">
                    <h4>Nos ajude</h4>
                    <ul>
                        <li><a href="https://www.instagram.com/gugu.talk.show/">Nos siga</a></li>
                        <li><a href="#contact">Feedback's</a></li>
                        <li><a href="https://link.mercadopago.com.br/deckcs">Faça uma doação</a></li>
                    </ul>
                </div>
                <div class="footer-col">
                    <h4>Redes sociais</h4>
                    <div class="social-links">
                        <a href="https://www.tiktok.com/@gugu.talk.show"><ion-icon name="logo-tiktok"></ion-icon></a>
                        <a href="https://www.youtube.com/@gts_brasil"><ion-icon name="logo-youtube"></ion-icon></a>
                        <a href="https://wa.me/5511999832007?text=Fale%20conosco"><ion-icon name="logo-whatsapp"></ion-icon></a>
                        <a href="https://www.instagram.com/gugu.talk.show/"><ion-icon name="logo-instagram"></ion-icon></a>
                    </div>
                </div>
            </div>
        </div>
        <p class="copy">
            &copy; <span id="ano"></span> Gugu Talkshow <br>Todos os direitos reservados.<br>
            <span>Desenvolvido por <a class="marketing" href="https://github.com/Derickcsantos/Derickcsantos">Derick Campos Santos</a></span>
        </p>
    </footer>
    

    <script>
        async function likePost(button, postId) {
            try {
                const response = await fetch(`/posts/${postId}/like`, { method: 'POST' });
                if (!response.ok) throw new Error('Erro ao adicionar like');
                const data = await response.json();
                const likeCountSpan = button.querySelector('.like-count');
                likeCountSpan.textContent = data.likes;
            } catch (err) {
                console.error('Erro ao adicionar like: ', err);
            }
        };

        function toggleSidebar() {
            const sidebar = document.getElementById('sidebar');
            if (sidebar.classList.contains('open')) {
                sidebar.classList.remove('open');
                sidebar.style.display = 'none';
            } else {
                sidebar.classList.add('open');
                sidebar.style.display = 'block';
            }
        }
    </script>
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
